<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GroupProject.ViewModels"
             x:Class="GroupProject.View.AccountPage"
             Title="My Account"
             x:Name="AccountRoot">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Image Source="{Binding ProfileImageSource}" HeightRequest="150" WidthRequest="150" />
            <Button Text="Upload New Picture" Command="{Binding UpdatePictureCommand}" />

            <Label Text="My Puzzles" FontAttributes="Bold" FontSize="18" />

            <CollectionView ItemsSource="{Binding Puzzles}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="{Binding PuzzleName}" VerticalOptions="Center" />
                            <Button Text="Delete"
                                    Command="{Binding BindingContext.DeletePuzzleCommand, Source={x:Reference AccountRoot}}"
                                    CommandParameter="{Binding .}" />
                        </HorizontalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
