<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="GroupProject.View.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GroupProject.View"
    Title="GroupProject">

    <ShellContent
        Title="Login"
		AutomationId="LoginShellButton"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Title="Register"
		AutomationId="RegisterShellButton"
        ContentTemplate="{DataTemplate local:RegisterPage}"
        Route="RegisterPage" />

    <ShellContent
        Title="Dashboard"
		AutomationId="DashboardShellButton"
        ContentTemplate="{DataTemplate local:DashboardPage}"
        Route="DashboardPage" />

    <ShellContent
        Title="Account"
		AutomationId="AccountShellButton"
        ContentTemplate="{DataTemplate local:AccountPage}"
        Route="AccountPage" />

    <ShellContent
        Title="Sandbox"
		AutomationId="SandboxShellButton"
        ContentTemplate="{DataTemplate local:PuzzlePage}"
        Route="PuzzlePage" />

	<ShellContent
		Title="Learner"
		AutomationId="LearnerShellButton"
		ContentTemplate="{DataTemplate local:LearnerPage}"
		Route="LearnerPage" />

    <ShellContent
        Title="Trending"
		AutomationId="TrendingShellButton"
        ContentTemplate="{DataTemplate local:TrendingPage}"
        Route="TrendingPage" />

    <!-- <ShellContent
        Title="MichaelsPage"
        ContentTemplate="{DataTemplate local:MichaelsPage}"
        Route="MichaelsPage" /> -->
</Shell>
