<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="GroupProject.View.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GroupProject.View"
    Title="GroupProject">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Title="Register"
        ContentTemplate="{DataTemplate local:RegisterPage}"
        Route="RegisterPage" />

    <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate local:DashboardPage}"
        Route="DashboardPage" />

    <ShellContent
        Title="Account"
        ContentTemplate="{DataTemplate local:AccountPage}"
        Route="AccountPage" />

    <ShellContent
        Title="Sandbox"
        ContentTemplate="{DataTemplate local:PuzzlePage}"
        Route="PuzzlePage" />

	<ShellContent
		Title="Learner"
		ContentTemplate="{DataTemplate local:LearnerPage}"
		Route="LearnerPage" />

    <ShellContent
        Title="Challenges"
        ContentTemplate="{DataTemplate local:ChallengesPage}"
        Route="ChallengesPage" />

	<ShellContent
		Title="Challenge"
		ContentTemplate="{DataTemplate local:ChallengePage}"
		Route="ChallengePage" />
</Shell>
